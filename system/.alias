# reload
alias reload="source ~/.bash_profile"

# percolate
alias hot='cd ~/Development/percolate/devolate/hotlanta'
alias rose='cd ~/Development/percolate/devolate/rosetta'
alias d3='cd ~/Development/percolate/devolate/d3'

# code
alias code='cd ~/Development/'

# desktop
alias desktop='cd ~/Desktop/'

# Git
alias g="git"
alias gst="git status"
